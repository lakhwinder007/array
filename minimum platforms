 int findPlatform(int arr[], int dep[], int n)
    {
    	// Your code here
    	sort(arr,arr+n);
    	sort(dep,dep+n);
    	int i=1,j=0;
    	int mx=1,platforms=1;
    	while(i<n&&j<n){
    	    if(arr[i]<=dep[j]){
    	        platforms++;
    	        i++;
    	    }
    	    else if(arr[i]>dep[j]) {
    	        platforms--;
    	      j++;}
    	    mx=max(mx,platforms);
    	}
    	return mx;
    }
